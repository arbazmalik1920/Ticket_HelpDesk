@model List<Ticket.Models.User>

@{
    ViewBag.Title = "User Management";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
        }

        .table-container {
            background-color: #ffffff;
            border-radius: 0.5rem;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            padding: 2rem;
        }

        .table th, .table td {
            vertical-align: middle;
            text-align: center;
        }

        .table th {
            text-transform: uppercase;
            font-weight: bold;
        }

        .btn-primary {
            background-color: #007bff;
            border: none;
        }

            .btn-primary:hover {
                background-color: #0056b3;
            }

        .btn-warning {
            background-color: #ffc107;
            border: none;
        }

            .btn-warning:hover {
                background-color: #e0a800;
            }

        .btn-danger {
            background-color: #dc3545;
            border: none;
        }

            .btn-danger:hover {
                background-color: #c82333;
            }

        .no-users {
            font-style: italic;
            color: #6c757d;
        }
    </style>
</head>
<body>
    <div class="container my-5">
        <div class="table-container">
            <h2 class="text-center mb-4">User Management</h2>
            <div class="text-end mb-4">
                <a href="/User/Create" class="btn btn-primary">Add New User</a>
            </div>

            <table class="table table-bordered table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>Username</th>
                        <th>Name</th>
                        <th>Department</th>
                        <th>Mobile No</th>
                        <th>Email</th>
                        <th>Role</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var user in Model)
                        {
                            <tr>
                                <td>@user.UserId</td>
                                <td>@user.Username</td>
                                <td>@user.Name</td>
                                <td>@user.DepartmentName</td>
                                <td>@user.MobileNo</td>
                                <td>@user.Email</td>
                                <td>@user.Role</td>
                                <td>
                                    <span class="badge @((user.Status == "Active") ? "bg-success" : "bg-secondary")">
                                        @user.Status
                                    </span>
                                </td>
                                <td>
                                    <a href="/User/Edit/@user.UserId" class="btn btn-warning btn-sm">Edit</a>
                                    <a href="/User/Delete/@user.UserId" class="btn btn-danger btn-sm">Delete</a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="9" class="text-center no-users">No Users Available</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</body>
</html>
