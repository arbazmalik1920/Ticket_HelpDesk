@model List<Ticket.Models.Category>

@{
    ViewBag.Title = "Category Management";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>
<body>
    <div class="container my-5">
        <h2 class="text-center mb-4">Categories</h2>
        <div class="text-end mb-3">
            <a href="/Category/Create" class="btn btn-primary">Add New Category</a>
        </div>

        <table class="table table-bordered table-striped">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Category Name</th>
                    <th>Department Name</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var category in Model)
                {
                    <tr>
                        <td>@category.Id</td>
                        <td>@category.Name</td>
                        <td>@category.DepartmentName</td>
                        <td>@category.Status</td>
                        <td>
                            <a href="/Category/Edit/@category.Id" class="btn btn-warning btn-sm">Edit</a>
                            <a href="/Category/Delete/@category.Id" class="btn btn-danger btn-sm">Delete</a>

                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</body>
</html>
