
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>

    <!-- Link to Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.10.5/font/bootstrap-icons.css" rel="stylesheet">
    <style>
        body {
            background: linear-gradient(to bottom, #6a11cb, #2575fc);
            color: #fff;
        }

        .login-container {
            background-color: #fff;
            color: #333;
            border-radius: 10px;
            padding: 30px;
            width: 100%;
            max-width: 400px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        }

            .login-container h2 {
                font-weight: bold;
                font-size: 24px;
            }

            .login-container .form-label {
                font-weight: bold;
            }

        .btn-primary {
            background-color: #2575fc;
            border: none;
            font-weight: bold;
            padding: 10px;
        }

            .btn-primary:hover {
                background-color: #6a11cb;
            }

        .form-check-label {
            font-size: 0.9rem;
        }

        .login-container .form-control:focus {
            box-shadow: 0 0 5px rgba(38, 143, 255, 0.5);
            border-color: #2575fc;
        }
    </style>
</head>
<body class="d-flex justify-content-center align-items-center vh-100">

    <div class="login-container">
        <div class="text-center mb-4">
            <h2><i class="bi bi-lightning-fill text-primary"></i> Ticket App</h2>
            <p class="text-muted">Welcome back! Please login to your account.</p>
        </div>
        <form>
            <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input type="text" class="form-control" id="username" placeholder="Enter your username" required>
            </div>

            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input type="password" class="form-control" id="password" placeholder="Enter your password" required>
            </div>

            <div class="form-check mb-3">
                <input type="checkbox" class="form-check-input" id="rememberMe">
                <label class="form-check-label" for="rememberMe">Remember me</label>
            </div>

            <button type="button" id="btnLogin" class="btn btn-primary w-100">Sign in</button>
        </form>

        <div class="text-center mt-3">
            <p class="text-muted">Don't have an account? <a href="/register" class="text-primary">Sign up</a></p>
        </div>
    </div>

    <!-- Bootstrap JS and Popper.js -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Custom JS -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/Scripts/CustomJS/Login.js"></script>

</body>
</html>


