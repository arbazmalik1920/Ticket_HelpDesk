@{
    ViewBag.Title = "Ticket Management System";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <style>
        body {
            background-color: #eef2f5;
            font-family: 'Roboto', sans-serif;
            color: #333;
        }

        /* Hero Section */
        .hero-section {
            background: linear-gradient(135deg, #4b79a1, #283e51);
            color: white;
            padding: 5rem 2rem;
            text-align: center;
            border-radius: 15px;
            margin-bottom: 3rem;
        }

            .hero-section h1 {
                font-size: 3.5rem;
                font-weight: 700;
            }

            .hero-section p {
                font-size: 1.2rem;
                margin-top: 1rem;
            }

        .btn-hero {
            margin-top: 2rem;
            background: #ff7e5f;
            border: none;
            color: white;
            font-size: 1rem;
            padding: 0.75rem 2rem;
            border-radius: 30px;
            transition: background 0.3s ease, transform 0.2s ease;
        }

            .btn-hero:hover {
                background: #e3645a;
                transform: scale(1.05);
            }

        /* Section Titles */
        .section-title {
            color: #283e51;
            font-weight: bold;
            margin-bottom: 2rem;
            text-align: center;
            font-size: 2rem;
        }

        /* Featured Tickets Section */
        .ticket-card {
            background: white;
            border: none;
            border-radius: 15px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            padding: 1.5rem;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

            .ticket-card:hover {
                transform: translateY(-10px);
                box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
            }

            .ticket-card .status {
                font-weight: bold;
                border-radius: 30px;
                padding: 0.3rem 1rem;
                display: inline-block;
            }

        .status-open {
            background-color: #ffc107;
            color: #333;
        }

        .status-in-progress {
            background-color: #17a2b8;
            color: white;
        }

        .status-resolved {
            background-color: #28a745;
            color: white;
        }

        .ticket-card p {
            margin: 0.5rem 0;
        }



        /* Info Section */
        .info-section {
            margin: 2rem 0;
        }
           

        /* Info Cards */
        .info-card {
            background: white;
            border-radius: 15px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            width: 100%;
            flex: 1;
            margin: 0 10px;
           
        }

            .info-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 10px 20px rgba(0, 0, 0, 0.15);
            }

        .icon-container {
            width: 60px;
            height: 60px;
            display: flex;
            justify-content: center;
            align-items: center;
            border-radius: 50%;
            margin: 0 auto;
        }

            .icon-container i {
                font-size: 2rem;
            }

        .card-title {
            font-weight: bold;
            color: #333;
        }

        .card h2 {
            font-weight: bold;
            margin: 0;
        }
        .col-md-3 {
            flex: 0 0 auto;
            width: 20%;
        }
        
        /* Add spacing between cards */
        .row.g-4 > * {
            display: inline-block;
            justify-content: center;
        
        }

        /* Features Section */
        .feature-card {
            background: linear-gradient(135deg, #6a11cb, #2575fc);
            color: white;
            border-radius: 15px;
            padding: 2rem;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

            .feature-card:hover {
                transform: translateY(-10px);
                box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
            }

            .feature-card h5 {
                font-size: 1.5rem;
                font-weight: bold;
            }

            .feature-card p {
                font-size: 1rem;
                margin-top: 0.5rem;
            }


         /*   Chart section*/

        .charts-section {
            background: #f9f9f9;
            padding: 3rem;
            border-radius: 15px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }

            .charts-section .section-title {
                font-size: 2rem;
                color: #283e51;
                font-weight: bold;
            }

            .charts-section .chart-container {
                background: white;
                border-radius: 15px;
                padding: 2rem;
                box-shadow: 0 4px 10px rgba(0, 0, 0, 0.05);
                transition: transform 0.3s ease, box-shadow 0.3s ease;
            }

                .charts-section .chart-container:hover {
                    transform: translateY(-5px);
                    box-shadow: 0 8px 15px rgba(0, 0, 0, 0.15);
                }

            .charts-section h5 {
                font-size: 1.25rem;
                color: #4b79a1;
                font-weight: bold;
            }

            .charts-section p {
                color: #6c757d;
                font-size: 1rem;
            }

        /* Footer */
        .footer {
            background: #283e51;
            color: white;
            text-align: center;
            padding: 1rem;
            border-radius: 10px;
            margin-top: 3rem;
        }
    </style>
</head>
<body>
    <div class="container my-5">
        <!-- Hero Section -->
        <section class="hero-section">
            <h1>Welcome to the Ticket Management System</h1>
            <p class="lead">Streamline your ticketing process and track issues effortlessly.</p>
            <a href="/TrackTicket/Create" class="btn btn-hero">Create a New Ticket</a>
        </section>

        <!-- Featured Tickets Section -->
        <section>
            <h2 class="section-title">Highlighted Tickets</h2>
            <div class="row g-4">
                <div class="col-md-4">
                    <div class="ticket-card">
                        <h5 class="card-title">Ticket BSL-01</h5>
                        <span class="status status-open">Open</span>
                        <p><strong>Department:</strong> IT Support</p>
                        <p class="text-muted">"Issue accessing the internal portal."</p>
                        <a href="/TrackTicket/Index" class="btn btn-outline-primary btn-sm">View Details</a>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="ticket-card">
                        <h5 class="card-title">Ticket BSL-02</h5>
                        <span class="status status-in-progress">In Progress</span>
                        <p><strong>Department:</strong> HR</p>
                        <p class="text-muted">"Discrepancy in payroll data."</p>
                        <a href="/TrackTicket/Index" class="btn btn-outline-primary btn-sm">View Details</a>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="ticket-card">
                        <h5 class="card-title">Ticket BSL-03</h5>
                        <span class="status status-resolved">Resolved</span>
                        <p><strong>Department:</strong> Facilities</p>
                        <p class="text-muted">"Air conditioning unit replaced."</p>
                        <a href="/TrackTicket/Index" class="btn btn-outline-primary btn-sm">View Details</a>
                    </div>
                </div>
            </div>
        </section>

        <!-- Users and Tickets Info Section -->
        <section class="info-section">
            <h2 class="section-title">System Overview</h2>
            <div class="row g-4">
                <div class="col-md-3">
                    <div class="card p-4 text-center info-card">
                        <div class="icon-container bg-primary">
                            <i class="bi bi-people-fill text-white"></i>
                        </div>
                        <h5 class="card-title mt-3">Active Users</h5>
                        <h2 class="text-primary" id="activeUsers">Loading...</h2>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card p-4 text-center info-card">
                        <div class="icon-container bg-secondary">
                            <i class="bi bi-person-dash-fill text-white"></i>
                        </div>
                        <h5 class="card-title mt-3">Inactive Users</h5>
                        <h2 class="text-secondary" id="inactiveUsers">Loading...</h2>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card p-4 text-center info-card">
                        <div class="icon-container bg-success">
                            <i class="bi bi-person-lines-fill text-white"></i>
                        </div>
                        <h5 class="card-title mt-3">Total Users</h5>
                        <h2 class="text-success" id="totalUsers">Loading...</h2>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card p-4 text-center info-card">
                        <div class="icon-container bg-warning">
                            <i class="bi bi-ticket-perforated-fill text-white"></i>
                        </div>
                        <h5 class="card-title mt-3">Open Tickets</h5>
                        <h2 class="text-warning" id="openTickets">Loading...</h2>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card p-4 text-center info-card">
                        <div class="icon-container bg-danger">
                            <i class="bi bi-check-circle-fill text-white"></i>
                        </div>
                        <h5 class="card-title mt-3">Closed Tickets</h5>
                        <h2 class="text-danger" id="closedTickets">Loading...</h2>
                    </div>
                </div>
            </div>
        </section>

        <!-- Dashboard Charts Section -->
        <section class="charts-section my-5">
            <div class="container">
                <h2 class="section-title text-center mb-4">Dashboard Analytics</h2>
                <p class="text-muted text-center mb-5">
                    Gain insights into ticket distribution and departmental activity with these visualizations.
                </p>

                <!-- Department Pie Chart -->
                <div class="chart-container mb-5" style="max-width: 600px; margin: 0 auto;">
                    <h5 class="text-center mb-3">Department Distribution</h5>
                    <canvas id="departmentPieChart"></canvas>
                </div>

                <!-- Ticket Status Bar Graph -->
                <div class="chart-container" style="max-width: 600px; margin: 0 auto;">
                    <h5 class="text-center mb-3">Ticket Status Overview</h5>
                    <canvas id="ticketBarGraph"></canvas>
                </div>
            </div>
        </section>

        <!-- Features Section -->
        <section class="my-5">
            <h2 class="section-title">Why Choose Our System?</h2>
            <div class="row text-center g-4">
                <div class="col-md-4">
                    <div class="feature-card">
                        <h5>Real-Time Updates</h5>
                        <p>Monitor ticket progress and stay informed with instant notifications.</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="feature-card">
                        <h5>Seamless Workflow</h5>
                        <p>Manage and track tickets with an easy-to-use interface.</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="feature-card">
                        <h5>Comprehensive Reports</h5>
                        <p>Generate insights to improve your team's productivity.</p>
                    </div>
                </div>
            </div>
        </section>

        <!-- Call to Action -->
        <section class="text-center">
            <h2 class="section-title">Get Started Today</h2>
            <p>Join our platform and make your ticket management hassle-free.</p>
            <a href="/TrackTicket/Register" class="btn btn-hero">Sign Up Now</a>
        </section>

        <!-- Footer -->
        <footer class="footer">
            <p>&copy; 2025 Ticket Management System. All Rights Reserved.</p>
        </footer>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            // Fetch stats from the server
            $.ajax({
                url: '/Home/GetDashboardStats',
                type: 'GET',
                dataType: 'json',
                success: function (data) {
                    if (data.success === false) {
                        alert(data.message);
                        return;
                    }

                    // Update the UI with fetched data
                    $('#activeUsers').text(data.ActiveUsers);
                    $('#inactiveUsers').text(data.InactiveUsers);
                    $('#totalUsers').text(data.TotalUsers);
                    $('#openTickets').text(data.OpenTickets);
                    $('#closedTickets').text(data.ClosedTickets);
                },
                error: function () {
                    alert('Failed to fetch data from the server.');
                }
            });
        });


          // Department Pie Chart Data
        var departmentData = @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(ViewBag.DepartmentData));
        var departmentLabels = departmentData.map(d => d.Department);
        var departmentCounts = departmentData.map(d => d.Count);


        var pieChartConfig = {
            type: 'pie',
            data: {
                labels: departmentLabels,
                datasets: [{
                    data: departmentCounts,
                    backgroundColor: ['#FF6384', '#36A2EB', '#FFCE56', '#4BC0C0', '#9966FF']
                }]
            }
        };

        new Chart(document.getElementById('departmentPieChart'), pieChartConfig);

        // Ticket Status Bar Graph Data
        var statusData = @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(ViewBag.TicketStatusData));
        var statusLabels = statusData.map(s => s.Status);
        var statusCounts = statusData.map(s => s.Count);


        var barGraphConfig = {
            type: 'bar',
            data: {
                labels: statusLabels,
                datasets: [{
                    label: 'Tickets',
                    data: statusCounts,
                    backgroundColor: ['#36A2EB', '#FF6384']
                }]
            },
            options: {
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        };

        new Chart(document.getElementById('ticketBarGraph'), barGraphConfig);
    </script>
</body>
</html>
