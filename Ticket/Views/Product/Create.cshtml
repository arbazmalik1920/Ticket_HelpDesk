@model Ticket.Models.Product
@{
    ViewBag.Title = "Create Product";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <!-- Bootstrap 5 CSS Link -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light py-5">

    <h2 class="text-center text-dark mb-4">Create Product</h2>

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-4">
                <div class="card p-4 shadow-sm">
                    <form id="createForm">
                        <div class="mb-3">
                            <label for="Name" class="form-label">Name</label>
                            <input type="text" class="form-control" name="Name" id="Name" placeholder="Enter product name" />
                        </div>

                        <div class="mb-3">
                            <label for="Price" class="form-label">Price</label>
                            <input type="number" class="form-control" name="Price" id="Price" placeholder="Enter product price" />
                        </div>

                        <div class="mb-3">
                            <label for="Description" class="form-label">Description</label>
                            <input type="text" class="form-control" name="Description" id="Description" placeholder="Enter product description" />
                        </div>

                        <button type="button" id="btnCreate" class="btn btn-success w-100">Create</button>
                    </form>

                    <div class="message text-center mt-3" id="message"></div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap 5 JS and Popper.js -->
    @*<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>*@
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js"></script>
    <!-- Custom JS file for Create.js -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/Scripts/CustomJS/CreateProd.js"></script>

</body>
</html>

