
@model IEnumerable<Ticket.Models.Product>
@{
    ViewBag.Title = "Product List";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <!-- Link to Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body class="bg-light p-4">

    <h2 class="text-center text-dark mb-4">Product List</h2>

    <!-- Add New Product Button -->
    <a href="/Product/Create" class="btn btn-success mb-3">Add New Product</a>

    <!-- Product Table -->
    <table class="table table-bordered table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Price</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.Id</td>
                    <td>@product.Name</td>
                    <td>@product.Price</td>
                    <td>@product.Description</td>
                    <td class="d-flex justify-content-between">
                        <!-- Edit and Delete Links -->
                        <a href="/Product/Edit/@product.Id" class="btn btn-primary btn-sm">Edit</a>
                        <a href="/Product/Delete/@product.Id" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <!-- Link to Bootstrap JS and Popper.js (for components that require JS) -->
    @*<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>*@
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js"></script>
</body>
</html>

